<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:layout_editor_absoluteY="75dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@drawable/heart2"
        android:id="@+id/ImageHeart"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="1dp" />


    <ImageView
        android:id="@+id/ImageSuhtdown"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/shutdown"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="Nearby places"
        android:textSize="27dp"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:id="@+id/textViewTitleBar"
        app:layout_constraintRight_toLeftOf="@+id/ImageSuhtdown"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/ImageHeart"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.456" />

</android.support.constraint.ConstraintLayout>